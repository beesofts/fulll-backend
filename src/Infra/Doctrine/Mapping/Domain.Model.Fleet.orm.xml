<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                          https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <entity name="App\Domain\Model\Fleet" table="fleets">
        <id name="id" type="string" length="13" />
        <many-to-one field="owner" target-entity="App\Domain\Model\User">
            <join-column name="owner_name" referenced-column-name="name" nullable="false"/>
            <cascade>
                <cascade-persist />
            </cascade>
        </many-to-one>
        <many-to-many field="vehicles" target-entity="App\Domain\Model\Vehicle">
            <join-table name="fleets_vehicles">
                <join-columns>
                    <join-column name="fleet_id" nullable="false" />
                </join-columns>
                <inverse-join-columns>
                    <join-column name="vehicle_plate_number" referenced-column-name="plate_number" nullable="false" />
                </inverse-join-columns>
            </join-table>
            <cascade>
                <cascade-persist />
            </cascade>
        </many-to-many>
    </entity>
</doctrine-mapping>
